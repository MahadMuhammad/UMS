@model IEnumerable<UMS.Models.Finance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.RollNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RollNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RollNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RollNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
